[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target
[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/EcommerceApplication-Python
ExecStart=/home/ubuntu/env/bin/gunicorn --access-logfile - --workers 3 --bind unix:/home/ubuntu/EcommerceApplication-Python/gunicorn.sock EcommerceApplication.wsgi:application



       
[Install]
WantedBy=multi-user.target

